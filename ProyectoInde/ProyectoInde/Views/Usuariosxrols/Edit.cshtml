@model ProyectoInde.Models.Usuariosxrol

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<style>
    /*Diseño boton*/
    .boton_personalizado {
        text-decoration: none;
        /*padding: 10px;*/
        font-weight: 600;
        font-size: 20px;
        color: #ffffff;
        background-color: #1883ba;
        border-radius: 6px;
        border: 2px solid #0016b0;
    }

        .boton_personalizado:hover {
            color: #1883ba;
            background-color: transparent;
        }

    .boton_alternativo {
        background-color: #00c69f;
        color: #ffffff !important;
        border: 2px solid #006400;
        border-radius: 7px;
    }

        .boton_alternativo:hover {
            background-color: transparent !important;
            color: #00c69f !important;
            text-decoration: none;
        }
    /*Diseño Div cont*/
    .contpadre {
        background: transparent;
        height: 400px;
        /*IMPORTANTE*/
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .conthijo {
        background: transparent;
        width: 850px;
    }
</style>

<body id="top">
    <div class="encabezado">
        <b>EDITAR ROL</b>
    </div>
    <section id='services' class="s-services">
        <div style='text-align:center' class="form-group">
            <div class="contpadre">
                <div class="conthijo">
                    <div class="col-md-12">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CodUsuarioXrol" />
                            <div class="form-group">
                                <label asp-for="CodUsuario" class="control-label"></label>
                                <select asp-for="CodUsuario" class="form-control" asp-items="ViewBag.CodUsuario"></select>
                                <span asp-validation-for="CodUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CodRol" class="control-label"></label>
                                <select asp-for="CodRol" class="form-control" asp-items="ViewBag.CodRol"></select>
                                <span asp-validation-for="CodRol" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input class="btn btn_altenativo" type="submit" value="Guardar" />

                            </div>
                        </form>
                    </div>
                    <div>
                        <a class="btn btn_altenativo" asp-action="Index">Regresar a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>