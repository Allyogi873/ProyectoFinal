@model IEnumerable<ProyectoInde.Models.DatoTransformador>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<style>
    /*Diseño boton*/
    .boton_personalizado {
        text-decoration: none;
        /*padding: 10px;*/
        font-weight: 400;
        font-size: 15px;
        color: #ffffff;
        background-color: #1883ba;
        border-radius: 6px;
        border: 2px solid #0016b0;
    }

        .boton_personalizado:hover {
            color: #1883ba;
            background-color: transparent;
        }

    .boton_alternativo {
        font-weight: 300;
        background-color: #00c69f;
        color: #ffffff !important;
        border: 2px solid #006400;
        border-radius: 7px;
    }

        .boton_alternativo:hover {
            background-color: transparent !important;
            color: #00c69f !important;
            text-decoration: none;
        }
    /*Diseño Div cont*/
    .contpadre {
        background: transparent;
        height: 3300px; 
        /*IMPORTANTE*/
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .conthijo {
        background: transparent;
        width: 1300px;
    }
</style>
<body id="top">
    <div class="encabezado">
        <b> DATOS TRANSFORMADOR</b>
    </div>
    <section id='services' class="s-services">
        <div class="contpadre">
            <div class="conthijo">
                <p>
                    <a asp-action="Create">Ingresar Datos del Transformador</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                PotenciaMw
                            </th>
                            <th>
                                Temperatura AcC(C°)
                            </th>
                            <th>
                                Temperatura DeC(C°)
                            </th>
                            <th>
                                Nivel AC(%)
                            </th>
                            <th>
                                Vent. I/M/A
                            </th>
                            <th>
                                Fecha de ingreso
                            </th>
                            <th>
                                Hora de ingreso
                            </th>
                            <th>
                                Transformador
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PotenciaMw)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TemperaturaAcC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TemperaturaDeC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NivelAc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VentIMA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FecIngreso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodHoraNavigation.CodHora)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodTransformadorNavigation.Transformador1)
                                </td>
                                <td>
                                    <a  asp-action="Edit" asp-route-id="@item.CodDatoTransformador">Editar</a> |
                                    <a  asp-action="Details" asp-route-id="@item.CodDatoTransformador">Detalles</a> |
                                    <a asp-action="Delete" asp-route-id="@item.CodDatoTransformador">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- </div > -->
    </section>
</body>
