                    </div> <!-- end masonry__brick -->

                    <div class="masonry__brick" data-aos="fade-up">
                        <div class="item-folio">

                            <div class="item-folio__thumb">
                                <a href="@baseurl/images/portfolio/gallery/g-los-esclavos.jpg" class="thumb-link" title="Grow Green" data-size="1050x700">
                                    <img src="@baseurl/images/portfolio/los-esclavos.jpg"
                                         srcset="@baseurl/images/portfolio/los-esclavos.jpg 1x, @baseurl/images/portfolio/los-esclavos@2x.jpg 2x" alt="">
